{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist"
  },
  "include": ["src", "examples", "vitest.config.ts"],
  "exclude": ["opensrc"]
}
