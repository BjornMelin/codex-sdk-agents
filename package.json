{
  "name": "codex-toolloop",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:cli": "tsx apps/cli/src/index.ts",
    "check": "pnpm -s typecheck && pnpm -s lint && pnpm -s test",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "codex:protocol:gen": "turbo run codex:protocol:gen",
    "codex:schema:gen": "turbo run codex:schema:gen",
    "codex:gen": "turbo run codex:gen",
    "codex:gen:check": "turbo run codex:gen:check",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "fix": "turbo run fix",
    "fix:typecheck": "pnpm -s fix && pnpm -s typecheck && pnpm -s test",
    "test": "turbo run test",
    "test:watch": "vitest",
    "examples:basic": "tsx examples/basic.ts",
    "examples:stream": "tsx examples/stream.ts",
    "examples:structured": "tsx examples/structured.ts",
    "examples:review": "tsx examples/review.ts"
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.89.0",
    "ai": "^6.0.48",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@openai/codex": "0.89.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^62.3.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
