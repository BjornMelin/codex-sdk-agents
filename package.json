{
  "name": "codex-toolloop",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:cli": "tsx apps/cli/src/index.ts",
    "check": "pnpm -s typecheck && pnpm -s lint && pnpm -s test",
    "build": "turbo build",
    "dev": "turbo dev",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "pnpm -s lint:biome && pnpm -s lint:docs",
    "lint:biome": "biome check .",
    "lint:docs": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "biome format --write .",
    "fix": "biome format --write . && biome check --fix .",
    "fix:typecheck": "pnpm -s fix && pnpm -s typecheck && pnpm -s test",
    "test": "vitest run",
    "test:watch": "vitest",
    "examples:basic": "tsx examples/basic.ts",
    "examples:stream": "tsx examples/stream.ts",
    "examples:structured": "tsx examples/structured.ts",
    "examples:review": "tsx examples/review.ts"
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.88.0",
    "ai": "^6.0.45",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@typescript-eslint/parser": "^8.53.1",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^62.3.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
